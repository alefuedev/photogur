<div class="links">
  <%= link_to "Back to Pictures", pictures_path %>
  <% if current_user.id == @picture.user_id %>
   | <%= link_to "Edit this Picture", edit_picture_path(@picture) %>
  <% end %>
</div>
<div class="single-pic">
  <h3 class="title"><%= @picture.title %></h3>
  <img src="<%= @picture.url %>" alt="<%= @picture.title %>", class="picture">
  <p class="artist"><%= @picture.artist %></p>
</div>
