<h2>Edit your Picture</h2>
<%= link_to "Delete Picture", picture_path(@picture), method: :delete, data: {confirm: 'Are you sure?'} %>
<p>
<%= link_to "Back to Pictures", pictures_path %>
</p>
<%= form_for(@picture) do |f| %>
	 <p>
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
	 </p>
	 <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

